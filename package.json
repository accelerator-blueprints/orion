{
  "name": "raw-salmon",
  "version": "1.0.0",
  "description": "The goto knowledge base",
  "scripts": {
    "bootstrap": "lerna bootstrap --concurrency=2",
    "build": "lerna run build",
    "artifact:create": "lerna run artifact:create",
    "test": "lerna run test",
    "clean": "lerna clean",
    "docs": "docsify serve -p 4000 docs",
    "postinstall": "npm run bootstrap -- --no-ci",
    "lint-files": "eslint . --ext .js  --ext .graphql",
    "lint": "npm run generate-schema && npm run lint-files",
    "dev:lint": "npm run dev:generate-schema && npm run lint-files",
    "lint:fix": "eslint --fix --ext .js --ext .graphql .",
    "postcommit": "git update-index --again",
    "dev:generate-schema": "graphql get-schema --dotenv packages/app/.env.development --output=hasura-schema.json",
    "generate-schema": "graphql get-schema --output=hasura-schema.json",
    "start:assess-base": "lerna exec --scope=assess-base npm start",
    "e2e-test": "lerna run --scope=e2e-tests --stream --no-prefix e2e-test -- ",
    "dev:e2e-test": "npm run e2e-test -- ./local.js -- --screenshots-on-fails",
    "hosted:e2e-test": "npm run e2e-test -- ./hosted.js -- --screenshots-on-fails",
    "ci:e2e-test": "start-server-and-test 'start:assess-base' http-get://localhost:8000 'npm run e2e-test ./local.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/raw-salmon.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/raw-salmon/issues"
  },
  "homepage": "https://github.com/nearform/raw-salmon#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "docsify-cli": "^4.3.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.10.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-testcafe": "^0.2.1",
    "graphql": "^14.2.1",
    "graphql-cli": "^3.0.11",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.10.0",
    "start-server-and-test": "^1.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged --pattern '**/*.graphql'",
      "pre-push": "npm run dev:lint"
    }
  },
  "lint-staged": {
    "**.{js,graphql}": [
      "npm run dev:generate-schema",
      "eslint --fix",
      "git add"
    ]
  }
}
