{
  "name": "orion",
  "version": "1.0.0",
  "description": "The goto knowledge base",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "hasura"
    ]
  },
  "scripts": {
    "commit": "node_modules/commitizen/bin/git-cz",
    "bootstrap": "lerna bootstrap --concurrency=2",
    "build": "./scripts/patch-core-count.sh && lerna run build",
    "artifact:create": "lerna run artifact:create",
    "test": "lerna run test",
    "clean": "lerna clean",
    "docs": "docsify serve -p 4000 docs",
    "postinstall": "npm run bootstrap -- --no-ci",
    "lint-files": "xo",
    "lint": "npm run generate-schema && npm run lint-files",
    "dev:lint": "npm run dev:generate-schema && npm run lint-files",
    "lint:fix": "eslint --fix --ext .js --ext .graphql .",
    "dev:generate-schema": "graphql get-schema --dotenv packages/knowledge-base/.env.development --output=hasura-schema.json",
    "generate-schema": "graphql get-schema --output=hasura-schema.json",
    "start:kb": "lerna exec --scope=knowledge-base npm start",
    "start:apps": "npm run start:kb",
    "e2e-test": "lerna run --scope=e2e-tests --stream --no-prefix e2e-test -- ",
    "dev:e2e-test": "npm run e2e-test -- ./local.js -- --screenshots-on-fails",
    "hosted:e2e-test": "npm run e2e-test -- ./hosted.js -- --screenshots-on-fails",
    "ci:e2e-test": "start-server-and-test 'start:apps' http-get://localhost:8000 'npm run e2e-test ./local.js'",
    "ci:version": "lerna version --conventional-commits"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/orion.git"
  },
  "keywords": [],
  "author": "NearForm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/orion/issues"
  },
  "homepage": "https://github.com/nearform/orion#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.0.1",
    "commitizen": "^4.0.3",
    "docsify-cli": "^4.3.0",
    "dotenv": "^8.0.0",
    "eslint-config-xo-react": "^0.22.0",
    "eslint-plugin-cypress": "^2.8.1",
    "eslint-plugin-graphql": "^3.1.1",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "git-cz": "^3.3.0",
    "graphql": "^14.2.1",
    "graphql-cli": "^3.0.13",
    "husky": "^1.3.1",
    "lerna": "^3.16.4",
    "lint-staged": "^8.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "start-server-and-test": "^1.10.0",
    "url-loader": "^2.1.0",
    "xo": "^0.25.3"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && pretty-quick --staged --pattern '**/*.graphql'",
      "post-commit": "git update-index --again",
      "pre-push": "npm run dev:lint"
    }
  },
  "lint-staged": {
    "**.{js,graphql}": [
      "npm run dev:generate-schema",
      "xo --fix",
      "git add"
    ]
  },
  "dependencies": {
    "gatsby-source-s3": "0.0.0",
    "moment": "^2.24.0",
    "react-markdown": "^4.2.2"
  },
  "xo": {
    "prettier": true,
    "extends": "xo-react",
    "parser": "babel-eslint",
    "envs": [
      "es2017",
      "browser"
    ],
    "extensions": [
      "graphql"
    ],
    "rules": {
      "react/prop-types": [
        "error",
        {
          "skipUndeclared": true
        }
      ],
      "react/boolean-prop-naming": "warn",
      "react/require-default-props": "warn",
      "import/extensions": [
        "error",
        "never",
        {
          "svg": "always"
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "packages/*/src/components/**/*.js",
          "!packages/*/src/components/**/utils/**/*.js",
          "!packages/*/src/components/**/utils.js"
        ],
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "pascalCase"
            }
          ],
          "no-console": [
            "error",
            {
              "allow": [
                "warn",
                "error"
              ]
            }
          ]
        }
      },
      {
        "files": [
          "packages/*/src/components/**/*.stories.js",
          "packages/*/src/components/**/*.test.js"
        ],
        "rules": {
          "unicorn/filename-case": "off"
        }
      },
      {
        "files": "packages/*/src/components/**/hooks/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "camelCase"
            }
          ],
          "no-console": [
            "error",
            {
              "allow": [
                "warn",
                "error"
              ]
            }
          ]
        }
      },
      {
        "files": "packages/*/src/hooks/**/*.js",
        "rules": {
          "unicorn/filename-case": [
            "error",
            {
              "case": "camelCase"
            }
          ]
        }
      },
      {
        "files": "doesnotexist/**/*.js",
        "rules": {
          "quotes": [
            "error",
            "backtick"
          ]
        }
      },
      {
        "files": [
          "**/__mocks__/**/*.js",
          "**/*.test.js",
          "packages/*/loadershim.js"
        ],
        "envs": [
          "node",
          "jest"
        ]
      },
      {
        "files": "**/cypress/**/*.js",
        "plugins": [
          "cypress"
        ],
        "envs": [
          "node",
          "cypress/globals"
        ]
      },
      {
        "files": "packages/e2e-tests/**/*.js",
        "plugins": "testcafe",
        "extends": [
          "xo-react",
          "plugin:testcafe/recommended"
        ],
        "envs": [
          "es6",
          "node",
          "browser"
        ],
        "rules": {
          "new-cap": "off"
        }
      },
      {
        "files": "**/*.graphql",
        "plugins": [
          "graphql"
        ],
        "rules": {
          "graphql/template-strings": [
            "warn",
            {
              "env": "literal",
              "projectName": "orion",
              "validators": "all"
            }
          ]
        }
      },
      {
        "files": "packages/functions/**/*",
        "envs": [
          "es2017",
          "node"
        ]
      },
      {
        "files": "packages/functions/**/*.test.js",
        "envs": [
          "es2017",
          "node",
          "jest"
        ]
      },
      {
        "files": "packages/permissions-tests",
        "envs": [
          "es2017",
          "node",
          "jest"
        ]
      }
    ]
  }
}