{
  "name": "knowledgebase",
  "version": "1.0.0",
  "description": "The goto knowledge base",
  "scripts": {
    "bootstrap": "lerna bootstrap --concurrency=2",
    "build": "lerna run build",
    "test": "lerna run test",
    "clean": "lerna clean",
    "postinstall": "npm run bootstrap -- --no-ci",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "postcommit": "git update-index --again"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/knowledgebase.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/knowledgebase/issues"
  },
  "homepage": "https://github.com/nearform/knowledgebase#readme",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.10.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.4.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "husky": "^1.3.1",
    "lerna": "^3.13.3",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "**.{js,jsx,graphql}": [
      "eslint --fix",
      "git add"
    ]
  }
}
