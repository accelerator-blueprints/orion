{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://www.nearform.com/schemas/assessment.json",
  "title": "Assessment schema",
  "description": "Validates assessment data",
  "type": "object",
  "properties": {
    "name": {
      "$ref": "definitions.json#/definitions/name"
    },
    "key": {
      "$ref": "definitions.json#/definitions/key"
    },
    "guidance": {
      "$ref": "definitions.json#/definitions/guidance"
    },
    "orderIndex": {
      "type": "number",
      "minimum": 0
    },
    "logoAsset": {
      "type": "string"
    },
    "shortDescription": {
      "type": "string"
    },
    "pillars": {
      "type": "array",
      "uniqueItems": true,
      "items": [
        {
          "$ref": "definitions.json#/definitions/pillar"
        }
      ]
    }
  },
  "required": [
    "name",
    "key",
    "pillars",
    "orderIndex",
    "shortDescription"
  ]
}
