{
  "extends": [
    "plugin:prettier/recommended",
    "prettier/standard",
    "plugin:react/recommended",
    "standard"
  ],
  "plugins": [
    "prettier",
    "standard",
    "jest",
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true,
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "browser": true,
    "jest/globals": true
  },
  "rules": {
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 2,
    "prettier/prettier": "error",
    "space-before-function-paren": ["error", {
      "anonymous": "ignore",
      "named": "ignore",
      "asyncArrow": "ignore"
    }],
    "prefer-destructuring": ["error", {
      "VariableDeclarator": {
        "array": true,
        "object": true
      },
      "AssignmentExpression": {
        "array": true,
        "object": true
      }
    }, {
      "enforceForRenamedProperties": false
    }]
  },
  "settings": {
    "react": {
      "createClass": "createReactClass",
      "pragma": "React",  // Pragma to use, default to "React"
      "version": "16.8.4"
    }
  }
}
